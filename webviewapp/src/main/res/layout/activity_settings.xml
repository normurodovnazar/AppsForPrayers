<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.normurodov_nazar.webviewapp.Settings">
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:id="@+id/currentRegion"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/selectRegion"
        app:layout_constraintTop_toBottomOf="@id/currentRegion"
        android:layout_margin="30dp"
        android:background="@drawable/button_background"
        android:text="@string/select_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/selectRegion"
        android:layout_margin="20dp"
        android:id="@+id/currentDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/selectDistrict"
        app:layout_constraintTop_toBottomOf="@id/currentDistrict"
        android:layout_margin="30dp"
        android:background="@drawable/button_background"
        android:text="@string/select_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/apply"
        android:background="@drawable/button_background"
        android:layout_margin="5dp"
        android:text="@string/apply"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/site_info"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>